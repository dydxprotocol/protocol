{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "imports-on-top": 0,
    "operator-whitespace": 0,
    "mixedcase": 0,
    "security/no-block-members": 0,
    "variable-declarations": 0,
    "indentation": ["error", 4],
    "quotes": ["error", "double"],
    "arg-overflow": ["warning", 3],
    "security/enforce-explicit-visibility": ["error"]
  }
}
